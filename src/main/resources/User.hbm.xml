<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.mrchebik.model.User" table="Users">
        <id name="USER_ID" type="long">
            <column name="USER_ID" />
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" length="12" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="16" not-null="true"/>
        </property>
        <set name="notes" table="Notes" lazy="true" fetch="join">
            <key>
                <column name="USER_ID" not-null="true" />
            </key>
            <one-to-many class="ru.mrchebik.model.Note" />
        </set>
    </class>
</hibernate-mapping>